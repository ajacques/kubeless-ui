{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"             : false,
    "__TEST__"            : false,
    "__PROD__"            : false,
    "__COVERAGE__"        : false,
    "__SERVER_HOST__"     : false,
    "__SERVER_PORT__"     : false,
    "__CORS_PROXY_PORT__" : false
  },
  "rules": {
    "key-spacing"                 : 0,
    "jsx-quotes"                  : [2, "prefer-single"],
    "max-len"                     : [2, 120, 2],
    "object-curly-spacing"        : [2, "always"],
    "space-before-function-paren" : ["error", "never"],
    "padded-blocks"               : ["error", { "classes": "always" }]
  }
}
